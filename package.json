{
  "name": "messagequote",
  "version": "2.3.2",
  "main": "index.js",
  "license": "MIT",
  "description": "メッセージリンク、IDからメッセージを取得して展開するBot。",
  "author": "merunno",
  "private": false,
  "scripts": {
    "start": "node ./build/server/index.js",
    "debug": "ts-node src/server/index.ts",
    "deploy:guild": "node ./build/setup/guild.js",
    "deploy:global": "node ./build/setup/global.js",
    "compile": "tsc -p .",
    "format": "prettier --write src/**/**/*.ts",
    "check": "prettier --check src/**/**/*.ts",
    "lint": "eslint",
    "fix": "yarn run format && yarn run lint -- --fix",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "compile:test": "tsc -p . --noEmit"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@discordjs/rest": "^0.3.0",
    "discord-api-types": "^0.26.1",
    "discord.js": "^13.6.0",
    "dotenv": "^14.3.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.8.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.5.5"
  }
}
