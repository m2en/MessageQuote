{
  "name": "messagequote",
  "version": "2.2.1",
  "main": "index.js",
  "license": "MIT",
  "description": "メッセージリンク、IDからメッセージを取得して展開するBot。",
  "author": "merunno",
  "private": false,
  "scripts": {
    "start": "node ./build/server/index.js",
    "test": "ts-node ./src/server/index.ts",
    "deploy": "node ./build/setup/index.js",
    "compile": "tsc -p .",
    "format": "prettier --write",
    "eslint": "eslint --ignore-path .gitignore \"src/**/*.{js,ts}\"",
    "eslint:fix": "eslint --ignore-path .gitignore \"src/**/*.{js,ts}\" --fix",
    "fix": "yarn run format && yarn run lint -- --fix",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "clean": "echo \"Build directory, Removed.\" && rm -rf build"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@discordjs/builders": "^0.11.0",
    "@discordjs/rest": "^0.2.0-canary.0",
    "discord-api-types": "^0.26.1",
    "discord.js": "^13.6.0",
    "dotenv": "^14.2.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.5.4"
  }
