{
  "name": "messagequote",
  "version": "5.0.0",
  "main": "index.js",
  "license": "MIT",
  "description": "メッセージリンク、IDからメッセージを取得して展開するBot。",
  "author": "merunno",
  "private": false,
  "scripts": {
    "start": "node ./build/server/index.js",
    "deploy": "node ./build/setup/index.js",
    "dev": "ts-node src/index.ts",
    "setup": "pm2 start ./build/server/index.js --name MessageQuote",
    "build": "tsc -p .",
    "format": "prettier --write src/**/*.ts",
    "check": "prettier --check src/**/*.ts",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.ts\"",
    "lint:fix": "eslint --ignore-path .gitignore \"src/**/*.ts\" --fix",
    "fix": "yarn run format && yarn run lint:fix",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "build:test": "tsc -p . --noEmit"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn run format",
      "yarn run lint",
      "yarn run lint:fix",
      "yarn run check"
    ]
  },
  "dependencies": {
    "discord.js": "13.8.0",
    "dotenv": "^16.0.0",
    "pm2": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "husky": "^7.0.4",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  }
}
