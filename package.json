{
  "name": "messagequote",
  "version": "4.1.0",
  "main": "index.js",
  "license": "MIT",
  "description": "メッセージリンク、IDからメッセージを取得して展開するBot。",
  "author": "merunno",
  "private": false,
  "scripts": {
    "start": "node ./build/server/index.js",
    "prestart": "ts-node src/server/index.ts",
    "setup": "pm2 start ./build/index.js --name MessageQuote",
    "deploy": "node ./build/setup/index.js",
    "compile": "tsc -p .",
    "format": "prettier --write src/**/**/*.ts",
    "check": "prettier --check src/**/**/*.ts",
    "lint": "eslint --ignore-path .gitignore \"src/**/**/*.ts\"",
    "lint:fix": "eslint --ignore-path .gitignore \"src/**/**/*.ts\" --fix",
    "fix": "yarn run format && yarn run lint:fix",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "compile:test": "tsc -p . --noEmit"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn run format",
      "yarn run lint",
      "yarn run lint:fix",
      "yarn run check"
    ]
  },
  "dependencies": {
    "discord.js": "^13.6.0",
    "dotenv": "^16.0.0",
    "pm2": "^5.2.0"
  },
  "devDependencies": {
    "@discordjs/rest": "^0.3.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/parser": "^5.18.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "discord-api-types": "^0.31.0",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
