{
  "name": "messagequote",
  "version": "1.2.1",
  "main": "index.js",
  "license": "MIT",
  "description": "メッセージリンク、IDからメッセージを取得して展開するBot。",
  "author": "merunno",
  "private": false,
  "scripts": {
    "start": "node ./build/index.js",
    "debug": "ts-node ./src/index.ts",
    "compile": "tsc -p .",
    "format": "prettier --write",
    "lint": "eslint",
    "fix": "yarn run format && npm run lint -- --fix",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "compile:test": "tsc -p . --noEmit",
    "register:global": "ts-node ./src/setup/deploy.ts",
    "register:debug": "ts-node ./src/setup/debug.ts"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@discordjs/builders": "^0.11.0",
    "@discordjs/rest": "^0.2.0-canary.0",
    "discord-api-types": "^0.26.1",
    "discord.js": "^13.6.0",
    "dotenv": "^14.2.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.2.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.5.4"
  }
}
